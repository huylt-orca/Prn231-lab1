@model LoginModel;

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-center" style="height: 87vh">
        <form asp-action="Index" method="post">
            <h2 class="text-center">Login</h2>
            <div class="text-danger text-center">@ViewBag.Message</div>
            <div class="form-group row m-1">
                <label asp-for="Username" class="col-4">Username</label>
                    <input asp-for="Username" class="col-8" />
                    <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group row m-1">
                <label asp-for="Password" class="col-4">Password</label>
                <input type="password" asp-for="Password" class="col-8" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
            <input type="submit" value="Login" class="btn btn-info  text-white" />
            </div>
            <div class="text-center">
            <a asp-area="" asp-controller="Register" asp-action="Index">Register</a>
            </div>
        </form>
    
</div>
